{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "This element creates an Active Directory domain with a single domain controller. The default Domain Administrator password will be the one retrieved from the instance.",
    "Metadata": {
        "Version": "0.0.9"
    },
    "Parameters": {
        "DomainControllerIPs": {
            "Default": "10.0.0.10",
            "Description": "Comma-separated list of IP addresses of Domain Controllers (e.g. 10.0.0.10,10.0.64.10)",
            "Type": "CommaDelimitedList"
        },
        "DomainDNSName": {
            "AllowedPattern": "[a-zA-Z0-9]+\\..+",
            "Default": "example.com",
            "Description": "Fully qualified domain name (FQDN) of the forest root domain e.g. example.com",
            "MaxLength": "25",
            "MinLength": "3",
            "Type": "String"
        },
        "VPC": {
            "Description": "VPC ID",
            "Type": "AWS::EC2::VPC::Id"
        }
    },
    "Resources": {
        "DhcpOptions": {
            "Properties": {
                "DomainName": {
                    "Ref": "DomainDNSName"
                },
                "DomainNameServers": [
                    "AmazonProvidedDNS"
                ],
                "NetbiosNameServers": {
                    "Ref": "DomainControllerIPs"
                },
                "NetbiosNodeType": "2",
                "NtpServers": {
                    "Ref": "DomainControllerIPs"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    }
                ]
            },
            "Type": "AWS::EC2::DHCPOptions"
        },
        "VPCDHCPOptionsAssociation": {
            "Properties": {
                "DhcpOptionsId": {
                    "Ref": "DhcpOptions"
                },
                "VpcId": {
                    "Ref": "VPC"
                }
            },
            "Type": "AWS::EC2::VPCDHCPOptionsAssociation"
        }
    }
}
